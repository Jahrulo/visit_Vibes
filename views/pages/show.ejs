        });

        // Create a default Marker and add it to the map.
            const marker1 = new mapboxgl.Marker()
            .setLngLat(hotel.geometry.coordinates)
            .setPopup(
            new mapboxgl.Popup({ offset: 25 })
            .setHTML(
                `<h3>${hotel.title}</h3><p>${hotel.location}</p>`
            )
